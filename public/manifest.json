{
  "manifest_version": 2,

  "name": "Org Bookmarks",
  "description": "Open a new tab with Organized Bookmarks based on your bookmarks. Default launch shortcut is 'ALT+S' or 'CONTROL+S' for Macs.",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "New tab with Organized Bookmarks"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "MacCtrl+S"
      },
      "description": "Open a new tab with Organized Bookmarks"
    }
  },
  "icons": {
    "128": "logo128.png"
  },

  "content_security_policy": "script-src 'self' 'sha256-/KIdXWKzSwC+oMFOwliH6JUNSwOFLq4nkeY1otCx2Xc='; object-src 'self'",
  "permissions": [
    "bookmarks", "tabs", "storage", "chrome://favicon/", "https://cdnjs.cloudflare.com/"
  ]
}
