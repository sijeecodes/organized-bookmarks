{
  "manifest_version": 2,

  "name": "Org Bookmarks",
  "description": "Open a new tab with Org Bookmarks based on your bookmarks. Default launch shortcut is 'ALT+S' or 'CONTROL+S' for macs.",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "New tab with Org Bookmarks"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "MacCtrl+S"
      },
      "description": "Open a new tab with Org Bookmarks"
    },
    "shortcut1": {
      "suggested_key": {
        "default": "Alt+1",
        "mac": "MacCtrl+1"
      },
      "description": "Open a folder or link #1"
    },
    "shortcut2": {
      "suggested_key": {
        "default": "Alt+2",
        "mac": "MacCtrl+2"
      },
      "description": "Open a folder or link #2"
    },
    "shortcut3": {
      "suggested_key": {
        "default": "Alt+3",
        "mac": "MacCtrl+3"
      },
      "description": "Open a folder or link #3"
    }
  },

  "content_security_policy": "script-src 'self' 'sha256-/KIdXWKzSwC+oMFOwliH6JUNSwOFLq4nkeY1otCx2Xc='; object-src 'self'",
  "permissions": [
    "bookmarks", "tabs", "storage", "chrome://favicon/"
  ]
}
