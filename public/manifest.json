{
  "manifest_version": 2,

  "name": "Organized Bookmarks",
  "description": "Open a new tab with Organized Bookmarks based on your bookmarks. Default launch shortcut is 'Ctrl+Shift+S' or 'Command+Shift+S' for Macs.",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Organized Bookmarks \n(WIN: Ctrl+Shift+S / MAC: Command+Shift+S)"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Organized Bookmarks (WIN:Ctrl+Shift+S / MAC:Command+Shift+S)"
    }
  },
  "icons": {
    "128": "logo128.png"
  },

  "content_security_policy": "script-src 'self' 'sha256-/KIdXWKzSwC+oMFOwliH6JUNSwOFLq4nkeY1otCx2Xc='; object-src 'self'",
  "permissions": [
    "bookmarks", "tabs", "storage", "chrome://favicon/", "https://cdnjs.cloudflare.com/"
  ]
}
